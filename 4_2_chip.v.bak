#module 4_2_chip(
	input										in1,
	input										in2,
	input										in3,
	input										in4,
	input										cin,
	output									cout,
	output									carry,
	output									sum
);
assign			sum = in1^in2^in3^in4^cin;
assign			cout = (in1&in2)|(in1&in3)|(in2&in3);
assign         carry = (in4 &sum)|(in4&cin)|(sum&cin);
endmodule